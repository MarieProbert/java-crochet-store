<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.CatalogController" stylesheets="@../style.css">

    <!-- Image à gauche -->
    <top>
        <ImageView fx:id="bannerImage" fitWidth="500" fitHeight="200" preserveRatio="true"/>
    </top>
    
    <left>
        <VBox alignment="TOP_LEFT" spacing="20">
        
        	<!-- Barre de recherche -->
            <TextField fx:id="searchField" promptText="Rechercher un produit..." />
            <Button text="Rechercher" fx:id="searchButton" onAction="#handleSearch"/>

            <Label text="Filtres" />
            <CheckBox text="Filtrer par prix" />
            <CheckBox text="Filtrer par catégorie" />
            <CheckBox text="Filtrer par couleur" />
        </VBox>
    </left>

    <!-- Grille de produits au centre -->
    <center>
        <GridPane fx:id="productGrid" hgap="10" vgap="10" />
    </center>

    <!-- Pagination en bas -->
    <bottom>
        <HBox alignment="CENTER">
            <Pagination fx:id="pagination" pageCount="1" />
        </HBox>
    </bottom>

</BorderPane>