<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.AdminOrderController" stylesheets="@../style.css">

    <top>
        <VBox alignment="CENTER">

            <ImageView fx:id="bannerImage" fitWidth="150" fitHeight="150" preserveRatio="true" />
   
        <HBox alignment="BOTTOM_RIGHT">
        
        <Button text="Return to menu" onAction="#handleReturnMenu"/>
        <!-- IcÃ´ne de profil -->
