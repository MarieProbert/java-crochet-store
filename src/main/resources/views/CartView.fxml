<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.CartController" stylesheets="@../style.css">

    <top>
        <VBox alignment="CENTER">
            <!-- Conteneur avec la classe 'banner' pour afficher la couleur de fond sur toute la largeur -->
            <HBox styleClass="banner">
                <Label text="Delivery under two weeks" styleClass="delivery" />
            </HBox>
            
            <ImageView fx:id="bannerImage" fitWidth="150" fitHeight="150" preserveRatio="true" />
            
            <HBox alignment="BOTTOM_RIGHT">
        
        		<Button text="Catalog" fx:id="searchCatalog" onAction="#handleCatalog"/>
        		<Button text="Account" fx:id="searchAccount" onAction="#handleAccount"/>
        
        	</HBox>
            
        </VBox>
        

        

    </top>

    <!-- Grille de produits au centre avec ScrollPane -->
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true">
            <content>
                <GridPane fx:id="productGrid" hgap="10" vgap="10" />
            </content>
        </ScrollPane>
    </center>
    
    <bottom> 
    	<Button text="Proceed to checkout" fx:id="checkout" onAction="#handleValidate"/>
    </bottom>

</BorderPane>