<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.AdminCatalogController" stylesheets="@../style.css">

    <top>
        <VBox alignment="CENTER">

            <ImageView fx:id="bannerImage" fitWidth="150" fitHeight="150" preserveRatio="true" />
   
        <HBox alignment="BOTTOM_RIGHT">
        
        <Button text="Return to menu" onAction="#handleReturnMenu"/>
        <!-- Icône de profil -->
        <ImageView fx:id="personIcon" fitWidth="40" fitHeight="40" preserveRatio="true"/>

        </HBox>         
            
        </VBox>
              
    </top>
    
    <left>
        <VBox styleClass="left-padding">
        
        	<!-- Barre de recherche -->
            <TextField fx:id="searchField" promptText="Rechercher un produit..." />
            <Button text="Rechercher" fx:id="searchButton" onAction="#handleSearch"/>

            <Label text="Filtres" />
            <CheckBox text="Filtrer par prix" />
            <CheckBox text="Filtrer par catégorie" />
            <CheckBox text="Filtrer par couleur" />
        </VBox>
    </left>

    <!-- Grille de produits au centre avec ScrollPane -->
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true">
            <content>
                <GridPane fx:id="productGrid" hgap="10" vgap="10" />
            </content>
        </ScrollPane>
    </center>


</BorderPane>